{
  "compilerOptions": {
    "alwaysStrict": true,
    "declaration": true,
    "declarationDir": "./dist/dts",
    "diagnostics": true,
    "experimentalDecorators": true,
    "listEmittedFiles": true,
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist/es6",
    "sourceMap": true,
    "target": "ES2015",
    "typeRoots" : ["./typings"]
  },
  "include": [
        "src/**/*"
    ],
  "exclude": ["node_modules"]
}
